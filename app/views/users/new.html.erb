<div class="form-container">
  <div class="form-holder">
    <%= form_for @user do |f| %>
      <% if @cohort_id %>
        <%= f.hidden_field :cohort_id, value: @cohort_id %>
      <% end %>

      <div>
        <%= f.label :name, class: "for_text_inputs" %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div>
        <%= f.label :email, class: "for_text_inputs" %>
        <%= f.text_field :email, required: true %>
      </div>

      <div>
        <%= f.label :username, class: "for_text_inputs" %>
        <%= f.text_field :username, required: true %>
      </div>
      <div>
        <%= f.label :password, class: "for_text_inputs" %>
        <%= f.password_field :password, required: true %>
      </div>


      <div class="radio-group" id="user-type-picker">
        <%= f.label :user_type, class: "for_radio_set" %>
        <%= f.radio_button :user_type, 'student' %> <%= f.label :user_type_student, 'Student', required: true %>
        <%= f.radio_button :user_type, 'instructor' %> <%= f.label :user_type_instructor, 'Instructor', required: true %>
      </div>

      <% unless @cohort_id %>
        <div id='cohort-picker'>
          <%= f.label :cohort_id, class: "for_text_inputs" %>
          <%= f.select :cohort_id, options_for_select(Cohort.all.map { |c| [c.name, c.id] }), prompt: "Select your cohort...", required: true  %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign up!" %>
      </div>
    <% end %>
  </div>
  <div class="form-color"></div>
</div>

